<div class="tw-flex tw-p-10 tw-bg-white">
  <div class="tw-mr-8 tw-w-56">
    <img src="<%= @credit_variant_order.image_url%>" alt="" class='tw-w-full'>
  </div>
  <div>
    <p>
      <%= @credit_variant_order.titles.join(" ")%> <span> x <%= @credit_variant_order.num%></span>
    </p>
    <p>
      点数消耗: <%= @credit_variant_order.credit_price * @credit_variant_order.num %>
      <span class='tw-ml-4 tw-text-gray-500'>目前账户拥有点数<%= current_user.credit_sum %></span>
    </p>
    <%= form_with model: @credit_variant_order, local: true do |f| %>
      <%= f.hidden_field :credit_variant_id %>
      <%= f.text_field :num, value: 1 %>

    <div>
      <%= render "shared/error_messages", target: @credit_variant_order %>
    </div>

      <div class="form-group">
        <%= f.label :deliver_address, "收件地址" %>
        <%= f.text_field :deliver_address %>
      </div>
      <div class="form-group">
        <%= f.label :deliver_receiver_name, "收件人" %>
        <%= f.text_field :deliver_receiver_name %>
      </div>
      <div class="form-group">
        <%= f.label :deliver_receiver_phone, "手机号" %>
        <%= f.text_field :deliver_receiver_phone %>
      </div>
      <div class="form-group">
        <%= f.label :deliver_markup, "订单备注" %>
        <%= f.text_field :deliver_markup %>
      </div>
      <div class="form-group">
        <%= f.submit "提交订单", class: "btn btn-primary" %>
      </div>
    <% end%>
  </div>
</div>
