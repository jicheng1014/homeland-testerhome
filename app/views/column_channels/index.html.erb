
<div class="mb-3 row">
<%unless @column_channel_top_ads.blank?%>
  <div class="col-12 ">
    <%= render "top_ad_slide"%>
  </div>
<%end %>
</div>

<%= raw Setting.column_channel_top_raw_html%>


<div class="row">
  <div class="col-lg-2">
  <div class="card d-none d-md-block">
    <div class="card-body">
      <%= render 'left' %>
    </div>
  </div>
  </div>


  <div class="col-lg-7">
    <div class="topics card">
      <div class="card-body item-list">
        <%= render partial: 'topic', collection: @topics, locals: { suggest: false } %>
      </div>

      <% if  @topics.total_pages > 1 %>
      <div class="clearfix card-footer">
        <%= paginate @topics,window: 1, outer_window: 2, total_pages: @topics.total_pages >=60 ? 60 : @topics.total_pages  %>
      </div>
      <% end %>


    </div>
  </div>


  <div class="col-lg-3">
    <%= render 'right' %>
  </div>


</div>
